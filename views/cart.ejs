<!DOCTYPE html>
<html lang="en">

<head>
  <title>Your Cart</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <div id = "between-head-foot" >

    <div id = "cart-box">
      <h2>Shopping cart: </h2>

      <% for (let item of user.items) { %>
      <div id = "cart-box-item">
        <img src = <%= item.img %> alt="img" >
        <p class = "b-desc"><%= item.name %></p>
        <div id = "cart-quantity-box">
            <button id = "btn">-</button>
             <p> &nbsp; <%= item.number %> &nbsp;</p>
            <button id = "btn">+</button>
        </div>
        <div id = "price">
          <p class = "p-desc">$<%= item.price %></p>
        </div>
      </div>
      <% } %>

      <hr>
      <div id = "cart-order-total">
        <p class = "b-desc">Sub-Total: $<%= user.total %></p>
      </div>
      <div id = "cart-box-footer">
        <button id = "button-set-add-more"> Add more </button>
        <button id = "button-set-order-time" onclick="location.href='http://localhost:8080/orders/1'" type="button"> Order </button>
      </div>
    </div>
  </div>

  <!-- <%- include('partials/_footer') %> -->
</body>

</html>
